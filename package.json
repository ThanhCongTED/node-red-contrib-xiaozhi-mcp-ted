    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint nodes/**/*.js lib/**/*.js test/**/*.js",
    "lint:fix": "eslint --fix nodes/**/*.js lib/**/*.js test/**/*.js",
    "format": "prettier --write nodes/**/*.js lib/**/*.js test/**/*.js",
