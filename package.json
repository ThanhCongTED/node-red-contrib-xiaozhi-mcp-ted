  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "node-red": "^3.1.9",
    "node-red-node-test-helper": "^0.3.5",
    "@types/jest": "^29.5.12"
  },
  "peerDependencies": {
    "node-red": ">=3.0.0"
