  "keywords": [
    "node-red",
    "xiaozhi",
    "mcp",
    "iot",
    "websocket",
    "smart-home",
    "ai"
  ],
  "author": {
    "name": "ThanhCongTED",
    "email": "your-email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThanhCongTED/node-red-contrib-xiaozhi-mcp-ted.git"
  },
  "bugs": {
    "url": "https://github.com/ThanhCongTED/node-red-contrib-xiaozhi-mcp-ted/issues"
  },
  "homepage": "https://github.com/ThanhCongTED/node-red-contrib-xiaozhi-mcp-ted#readme",
  "node-red": {
    "version": ">=3.0.0",
    "nodes": {
      "xiaozhi-config": "nodes/xiaozhi-config/xiaozhi-config.js",
